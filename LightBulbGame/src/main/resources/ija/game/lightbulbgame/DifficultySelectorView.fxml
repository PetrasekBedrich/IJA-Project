<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ija.game.lightbulbgame.DifficultySelectorController"
      stylesheets="@Styles/ButtonStyles.css"
      minWidth="800" maxWidth="800" minHeight="600" maxHeight="600">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Vyberte obtížnost" style="-fx-font-weight: bold;">
        <font>
            <Font size="20.0" />
        </font>
    </Label>

    <Button text="Lehká"
            onAction="#onEasyButtonClick"
            styleClass="NavigationButton"
            prefWidth="150"/>
    <Button text="Střední"
            onAction="#onMediumButtonClick"
            styleClass="NavigationButton"
            prefWidth="150"/>
    <Button text="Těžká"
            onAction="#onHardButtonClick"
            styleClass="NavigationButton"
            prefWidth="150"/>
    <Button text="Zpět"
            onAction="#onBackButtonClick"
            styleClass="BackButton"
            prefWidth="100"/>
</VBox>