<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ija.game.lightbulbgame.MainController"
      stylesheets="@Styles/ButtonStyles.css"
      minWidth="800" maxWidth="800" minHeight="600" maxHeight="600" >
    <padding>
        <Insets bottom="20.0"
                left="20.0"
                right="20.0"
                top="20.0"/>
    </padding>

    <Label text="Light Bulb Game"
           style="-fx-font-weight: bold;"/>

    <Button text="Nová hra"
            onAction="#onNewGameButtonClick"

            styleClass="NavigationButton"/>

    <Button text="Načíst hru"
            onAction="#onLoadGameButtonClick"
            styleClass="NavigationButton"/>

</VBox>
